        "onLanguage:haskell",
        "onLanguage:html",
        "onLanguage:haxe",
        "onLanguage:hive-sql",
        "onLanguage:kotlin",
        "onLanguage:java",
        "onLanguage:javascript",
        "onLanguage:javascriptreact",
        "onLanguage:jsonc",
        "onLanguage:julia",
        "onLanguage:latex",
        "onLanguage:less",
        "onLanguage:lisp",
        "onLanguage:lua",
        "onLanguage:makefile",
        "onLanguage:matlab",
        "onLanguage:nim",
        "onLanguage:objective-c",
        "onLanguage:objective-cpp",
        "onLanguage:objectpascal",
        "onLanguage:pascal",
        "onLanguage:perl",
